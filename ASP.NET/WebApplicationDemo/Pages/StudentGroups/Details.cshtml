<div class="row">
    <div class="col-12 col-md-4">
        <a asp-page="CreateStudent" asp-route-studentGroupId="@Model.StudentGroup.Id">Create New</a>
    </div>
    <div class="col-12 col-md-8">
        <form asp-page-handler="Filter" asp-route-id="@Model.StudentGroup.Id">

            @{

                var sl = new List<SelectListItem>();
